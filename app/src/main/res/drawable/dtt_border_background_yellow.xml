<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background picture flush with the inner border -->
    <item android:left="10dp" android:right="10dp" android:top="10dp" android:bottom="10dp">
        <bitmap android:src="@drawable/background_red_optimized" android:gravity="fill"/>
    </item>
    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="10dp" android:color="#FFC107"/> <!-- Set your border color and width here -->
        </shape>
    </item>
</layer-list>
