<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wvie_choice_red"
    tools:context="com.example.watVindIkErger.WvieChoiceRedActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_background_red">

    <!--GLOBAL LISTENING FEEDBACK BUTTON (TOP RIGHT)-->
    <com.example.GlobalListeningFeedbackButton
        android:id="@+id/listeningButton"
        android:layout_width="120px"
        android:layout_height="120px"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/mic_listening" />

    <TextView
        android:id="@+id/text_view_choice_title_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/bottomMargin"
        android:gravity="center"
        android:text="Keuze rood"
        android:textColor="#5b7683"
        android:textSize="@dimen/game_title_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/image_view_foto_red_choice"
        android:layout_width="313dp"
        android:layout_height="382dp"
        android:layout_centerInParent="true"
        android:background="#00FFFFFF"
        android:src="@drawable/foto_default" />

    <ImageButton
        android:id="@+id/noButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="33dp"
        android:layout_marginBottom="31dp"
        android:background="#00FFFFFF"
        android:src="@drawable/cross_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/hearButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:background="#00FFFFFF"
        app:srcCompat="@drawable/pictogram_oortje" />

    <ImageButton
        android:id="@+id/yesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="33dp"
        android:background="#00FFFFFF"
        android:src="@drawable/checkmark_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</RelativeLayout>