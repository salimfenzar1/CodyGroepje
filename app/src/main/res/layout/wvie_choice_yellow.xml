<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wvie_choice_yellow"
    tools:context=".userInterface.WvieChoiceYellowActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_background_yellow">

    <TextView
        android:id="@+id/text_view_choice_title_yellow"
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="636dp"
        android:gravity="center"
        android:text="Keuze geel"
        android:textColor="#5b7683"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/image_view_foto_yellow_choice"
        android:layout_width="313dp"
        android:layout_height="382dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="null"
        android:src="@drawable/foto_default"/>

    <ImageButton
        android:id="@+id/image_button_cross_yellow_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="33dp"
        android:layout_marginBottom="31dp"
        android:background="null"
        android:src="@drawable/pictogram_kruis"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/hearButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:background="null"
        app:srcCompat="@drawable/pictogram_oortje" />
    <ImageButton
        android:id="@+id/nextButton"
        android:layout_width="91dp"
        android:layout_height="57dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="26dp"
        android:background="null"

        app:srcCompat="@drawable/arrow_icon" />


</RelativeLayout>