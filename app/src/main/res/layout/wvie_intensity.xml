<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wvie_intensity"
    tools:context="com.example.watVindIkErger.WvieIntensityActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green_background">

    <TextView
        android:id="@+id/text_view_intensity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/bottomMargin"
        android:text="@string/intensity_title"
        android:textColor="@color/textColor"
        android:textSize="@dimen/game_title_text_size" />

    <TextView
        android:id="@+id/text_view_low_intensity"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="283dp"
        android:layout_toStartOf="@+id/text_view_medium_intensity"
        android:text="@string/low_intensity"
        android:textColor="#5b7683" />

    <TextView
        android:id="@+id/text_view_medium_intensity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="293dp"
        android:layout_toStartOf="@+id/text_view_high_intensity"
        android:text="@string/medium_intensity"
        android:textColor="#5b7683" />

    <TextView
        android:id="@+id/text_view_high_intensity"
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="293dp"
        android:text="@string/high_intensity"
        android:textColor="#5b7683" />

    <ImageButton
        android:id="@+id/hearButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:background="#00FFFFFF"
        app:srcCompat="@drawable/pictogram_oortje" />

    <ImageView
        android:id="@+id/image_view_high_intensity"
        android:layout_width="68dp"
        android:layout_height="58dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="319dp"
        app:srcCompat="@drawable/intensity_high" />

    <ImageView
        android:id="@+id/image_view_medium_intensity"
        android:layout_width="68dp"
        android:layout_height="57dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="319dp"
        android:layout_toStartOf="@+id/image_view_high_intensity"
        app:srcCompat="@drawable/intensity_medium" />

    <ImageView
        android:id="@+id/image_view_low_intensity"
        android:layout_width="64dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="318dp"
        android:layout_toStartOf="@+id/image_view_medium_intensity"
        app:srcCompat="@drawable/intensity_low" />

    <ImageButton
        android:id="@+id/toNextPage"
        android:layout_width="91dp"
        android:layout_height="57dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="26dp"
        android:background="#00FFFFFF"
        app:srcCompat="@drawable/arrow_icon" />

</RelativeLayout>