<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wvie_subjects"
    tools:context="com.example.watVindIkErger.WvieSubjectsActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_green">

    <TextView
        android:id="@+id/text_view_subjects_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/bottomMargin"
        android:gravity="center"
        android:text="Onderwerp stellingen"
        android:textColor="@color/textColor"
        android:textSize="@dimen/game_title_text_size"/>

    <ImageView
        android:id="@+id/image_seksualiteit"
        android:layout_width="185dp"
        android:layout_height="146dp"
        app:srcCompat="@drawable/seksualiteit"
        android:layout_marginTop="250dp"
        android:layout_marginStart="40dp"
        />

    <ImageView
        android:id="@+id/image_view_family"
        android:layout_width="185dp"
        android:layout_height="146dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="186dp"
        android:layout_marginBottom="190dp"
        app:srcCompat="@drawable/familie_overleden" />



    <ImageButton
        android:id="@+id/hearButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:background="#00FFFFFF"
        app:srcCompat="@drawable/pictogram_oortje" />

</RelativeLayout>